@model IEnumerable<Web.WeekLyst.Models.Ficha>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Weelyst Agregar ficha</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-lg"><i class="fas fa-address-book"></i>&nbsp;Crear Ficha</a>
</p>

<table class="table table table-sm table-primary table-striped"  id="tabla" div style="width:30vw">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumFicha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumFicha)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"><i class="far fa-edit"></i>&nbsp;Edit</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i>&nbsp;Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://kit.fontawesome.com/eac556b4db.js" crossorigin="anonymous"></script>
